@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div id="idListOfficer">

</div>

@*Modal Untuk Create Data*@
<div id="idModalCreateDataOfficer" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div id="idModalBodyCreateDataOfficer" class="modal-body">
                <p>One fine body&hellip;</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="idBtnSaveOfficer" type="button" class="btn btn-primary">Save</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div id="idModalUpdateDataOfficer" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div id="idModalBodyUpdateDataOfficer" class="modal-body">
                <p>One fine body&hellip;</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="idBtnUpdateOfficer" type="button" class="btn btn-primary">Save</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
    $(document).ready(function () {
        //alert("Hello dari javascript");
        $.ajax({
            url: '/Ajax/GetListOfficer',
            type: 'GET',
            success: function (model) {
                $('#idListOfficer').html(model);
            },
            error: function (model) {

                debugger;
            }

        });
        //alert("batch 129");
    });
    $('#idBtnSaveOfficer').click(function () {
        debugger;
        var vFormOfficcer = $('#idFormOfficer').serialize();
        $.ajax({
            url:'/Officer/Create',
            type: 'POST',
            data:vFormOfficcer,
            success: function (model) {
                debugger;
                if (model.pesan="Sukses") {
                    alert("Data Berhasil Disimpan");
                    $('#idModalCreateDataOfficer').modal("hide");
                    window.location.href = "/Officer/Index";//reload halaman indeks dari officer
                }
                else {
                    alert("Data Gagal Disimpan");
                }
            }
    });
    });

    $('#idBtnUpdateOfficer').click(function () {
        debugger;
        var vFormUpdateOfficcer = $('#idFormUpdateOfficer').serialize();
        $.ajax({
            url: '/Officer/Update',
            type: 'POST',
            data: vFormUpdateOfficcer,
            success: function (model) {
                debugger;
                if (model.pesan = "Sukses") {
                    alert("Data Berhasil Disimpan");
                    $('#idModalUpdateDataOfficer').modal("hide");
                    window.location.href == "/Officer/Index";//reload halaman indeks dari officer
                }
                else {
                    alert("Data Gagal Disimpan");
                }
            }
        });
    });
</script>
