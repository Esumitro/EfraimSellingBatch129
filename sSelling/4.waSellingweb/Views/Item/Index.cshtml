
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div id="idListItem">

</div>
@*Modal Untuk Create Data*@
<div id="idModalCreateDataItem" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Judul Modal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div id="idModalBodyCreateDataItem" class="modal-body">
                <p>One fine body&hellip;</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="idBtnSaveOfficer" type="button" class="btn btn-primary">Save Change</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script>
    $(document).ready(function () {
        //alert("Hello dari javascript");
        $.ajax({
            url: '/Ajax/GetListItem',
            type: 'GET',
            success: function (model) {
                $('#idListItem').html(model);
            },
            error: function (model) {

                debugger;
            }

        });
        //alert("batch 129");
    });
    $('#idBtnSaveItem').click(function () {
        debugger;
        var vFormOfficcer = $('#idFormItem').serialize();
        $.ajax({
            url: '/Item/Create',
            type: 'POST',
            data: vFormOfficcer,
            success: function (model) {
                debugger;
                if (model.pesan = "Sukses") {
                    alert("Data Berhasil Disimpan");
                    $('#idModalCreateDataItem').modal("hide");
                    window.location.href = "/Item/Index";//reload halaman indeks dari officer
                }
                else {
                    alert("Data Gagal Disimpan");
                }
            }
        });
    });
</script>

